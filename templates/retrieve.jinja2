{% extends 'base.jinja2' %}



{% block content %}
Вы искали: {{ terms }}
{% endblock content %}


{% block subtitle2 %}Результаты поиска{% endblock subtitle2 %}

{% block content2 %}
{% if no_res %}<span class="no_res">{{ no_res }}<br>{% endif %}
<div>
  <table>
    <tbody>
      {% for result in results %}
      <tr>
        <td> {{ result[0] }} </td>
        <td> {{ result[1] }} </td>
      </tr>
      {% endfor %}
      <style>
        mark {background-color: #ffffcc;}
        td{
          width: 350;
          padding: 10px;
          border-bottom: 0.5pt dashed black;
          text-align: left;
          vertical-align: top;
          }
        tr:hover {background-color: #f5f5f5;}
        a:visited {color: #800080;}
      </style>
    </tbody>
  </table>
</div>
{% endblock content2 %}
